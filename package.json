{
  "name": "nestjs_ldap-backend",
  "version": "0.0.1",
  "description": "Backend for NestJS LDAP authentication",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "packageManager": "pnpm@10.26.2",
  "scripts": {
    "clean": "npx rimraf dist",
    "build": "NODE_ENV=production nest build",
    "docker:deploy": "docker compose -f docker-compose.dev.yml --env-file ./.env up -d --force-recreate",
    "docker:build": "NODE_ENV=production docker compose -f docker-compose.yml --env-file ./.env.prod up -d api --build cache --force-recreate",
    "format": "prettier --write \"src/**/*.ts?\" \"test/**/*.ts?\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts?\" --fix",
    "migration:create": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:create",
    "migration:generate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -d src/data-source.ts",
    "migration:run": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d src/data-source.ts",
    "migration:revert": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -d src/data-source.ts",
    "migration:show": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:show -d src/data-source.ts",
    "start:debug": "nest start --env-file .env --debug --watch",
    "start:dev": "nest start --env-file .env --watch",
    "start:prod": "node dist/main",
    "start": "nest start --env-file .env",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV=test jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch",
    "test": "jest",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "@nestjs/cache-manager": "3.1.0",
    "@nestjs/common": "11.1.10",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.1.10",
    "@nestjs/jwt": "11.0.2",
    "@nestjs/passport": "11.0.5",
    "@nestjs/platform-express": "11.1.10",
    "@nestjs/typeorm": "11.0.0",
    "bcrypt": "6.0.0",
    "cache-manager-redis-store": "3.0.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.3",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "passport-local": "1.0.0",
    "pg": "8.16.3",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "typeorm": "0.3.28"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.3",
    "@eslint/js": "9.39.2",
    "@nestjs/cli": "11.0.14",
    "@nestjs/schematics": "11.0.9",
    "@nestjs/swagger": "11.2.3",
    "@nestjs/testing": "11.1.10",
    "@swc/cli": "0.7.9",
    "@swc/core": "1.15.7",
    "@types/bcrypt": "6.0.0",
    "@types/express": "5.0.6",
    "@types/jest": "30.0.0",
    "@types/node": "25.0.3",
    "@types/passport-jwt": "4.0.1",
    "@types/passport-local": "1.0.38",
    "@types/supertest": "6.0.3",
    "dotenv": "17.2.3",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "globals": "16.5.0",
    "jest": "30.2.0",
    "prettier": "3.7.4",
    "source-map-support": "0.5.21",
    "supertest": "7.1.4",
    "ts-jest": "29.4.6",
    "ts-loader": "9.5.4",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.50.1"
  }
}